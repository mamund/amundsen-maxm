{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TodoItem",
  "type": "object",
  "required": [
    "id",
    "title",
    "done",
    "dateCreated"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "title": {
      "type": "string"
    },
    "done": {
      "type": "boolean"
    },
    "dateCreated": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": true
}
